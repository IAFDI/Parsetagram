<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <Button
        android:id="@+id/createButton"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/refreshButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/instagram_new_post_outline_24" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/instagram_home_outline_24" />

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:ems="10"
        android:hint="enter a description"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/userButton"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/createButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:background="@drawable/instagram_user_outline_24" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/nav_logo_whiteout" />

</RelativeLayout>